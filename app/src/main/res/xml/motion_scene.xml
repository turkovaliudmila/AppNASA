<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetEnd="@layout/main_fragment_end"
        motion:constraintSetStart="@layout/main_fragment_start"
        motion:duration="1000">
        
        <OnSwipe
            motion:touchAnchorId="@+id/wiki_button"
            motion:touchAnchorSide="left"
            motion:dragDirection="dragLeft" />

    </Transition>

    <Transition
        motion:constraintSetStart="@layout/main_fragment_end"
        motion:constraintSetEnd="@layout/main_fragment_start"
        motion:duration="1000">
        <OnSwipe
            motion:touchAnchorId="@+id/wiki_button"
            motion:touchAnchorSide="right"
            motion:dragDirection="dragRight" />
    </Transition>
</MotionScene>